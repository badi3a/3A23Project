<html>
  <head></head>
    <body>

    <h1>Add a new Book</h1>
    {{ form_start(form) }}
      <table>
        <tr>
          <td>Title</td>
          <td>{{ form_widget(form.title) }}</td>
        </tr>
        <tr>
          <td>Pages number</td>
          <td>{{ form_widget(form.nbrPages) }}</td>
        </tr>
        <tr>
          <td>Author Name</td>
          <td>{{ form_widget(form.author) }}</td>
        </tr>
      </table>
    {{ form_end(form) }}
    </body>
</html>
